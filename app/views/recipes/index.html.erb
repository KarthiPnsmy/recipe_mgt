<h1>Listing recipes</h1>

<table cellspacing="0" cellpadding="10px" border="1">
  <tr>
    <th>S No</th>
    <th>User name</th>
    <th>Name</th>
    <th>Rating</th>
    <th colspan="3">Actions</th>
  </tr>

<% @recipes.each_with_index do |recipe, index| %>
  <tr>
    <td><%= index+1 %></td>
    <td><%= recipe.user_name %></td>
    <td><%= link_to recipe.name, recipe %></td>
    <td><%= recipe.rating %></td>

    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

